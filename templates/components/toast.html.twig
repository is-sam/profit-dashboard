<div data-controller="toast" role="alert"
    class="flex w-fit max-w-xs p-4 rounded-lg shadow text-gray-400 bg-gray-800">
    <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg toast-{{type}}">
        {% if type == 'success' %}
            <i class="fa-solid fa-check"></i>
        {% elseif type == 'warning'%}
            <i class="fa-solid fa-triangle-exclamation"></i>
        {% elseif type == 'error'%}
            <i class="fa-solid fa-circle-exclamation"></i>
        {% endif %}
    </div>
    <div class="ml-3 text-sm font-normal">{{ message }}</div>
    <button type="button" data-action="toast#close" aria-label="Close"
        class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5  inline-flex h-8 w-8 text-gray-500 hover:text-white bg-gray-800 hover:bg-gray-700">
        <span class="sr-only">Close</span>
        <i class="fa-solid fa-xmark w-5 h-5"></i>
    </button>
</div>
