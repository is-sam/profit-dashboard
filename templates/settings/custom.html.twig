{% extends "base.html.twig" %}

{% block title %}Settings - Custom Costs{% endblock %}

{% block body %}
    <div class="grid grid-cols-4 mb-4">
        <h2 class="text-2xl font-medium my-4 col-span-3">{{ 'settings.custom.title' | trans }}</h2>

        <div class="mb-4 flex flex-row-reverse">
            <button data-modal-btn='add_custom_cost' class="px-4 py-3 bg-green-600 rounded-md text-white outline-none focus:ring-4 shadow-lg transform active:scale-y-75 transition-transform">
                <span><i class="fa fa-plus pr-2"></i> Add</span>
            </button>
        </div>
    </div>

    <table class="min-w-full leading-normal">
        <thead>
            <tr class="text-left border-b-2 border-gray-200 bg-gray-100 text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <th class="px-5 py-3">Name</th>
                <th class="px-5 py-3">Start Date</th>
                <th class="px-5 py-3">End Date</th>
                <th class="px-5 py-3">Frequency</th>
                <th class="px-5 py-3">Amount</th>
                <th class="px-5 py-3">Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for cost in costs %}
                <tr class="border-b border-gray-200 bg-gray-800 text-sm">
                    <td class="px-5 py-5 w-1/10">{{ cost.name }}</td>
                    <td class="px-5 py-5 w-4/10">{{ cost.startDate ? cost.startDate | date('Y-m-d') : '-' }}</td>
                    <td class="px-5 py-5 w-4/10">{{ cost.endDate ? (cost.endDate | date('Y-m-d')) : '-' }}</td>
                    <td class="px-5 py-5 w-1/10">{{ cost.frequency }}</td>
                    <td class="px-5 py-5 w-1/10">{{ cost.amount | format_currency('EUR') }}</td>
                    <td class="px-5 py-5 w-1/10">
                        <a href="{{ path('settings_custom_delete', {id: cost.id}) }}"><i class="fa fa-trash text-red-500"></i></a>
                    </td>
                </tr>
            {% endfor %}
            {% if not costs %}
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-gray-800 text-sm w-1/10" colspan=5>
                        No custom costs have been added. Make sure you add your custom costs.
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    {% include 'settings/_add-custom-cost-modal.html.twig' %}
{% endblock %}
