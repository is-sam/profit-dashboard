        {{ form_row(customCostForm.amount) }}
        {{ form_row(customCostForm.frequency) }}
      </div>
      <div class="flex flex-row items-center justify-between p-5 bg-gray-800 border-t border-gray-200 rounded-bl-lg rounded-br-lg">
        {{ form_row(customCostForm.cancel) }}
        {{ form_row(customCostForm.add) }}
      </div>
    {{ form_end(customCostForm) }}
