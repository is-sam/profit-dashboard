<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Profit Dashboard | {% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-gray-900 text-gray-200 leading-tight flex">
        {% block outer %}
            {% include "_sidebar.html.twig" %}

            <div class="container p-4 pl-20 md:pl-72">
                {% block body %}{% endblock %}
            </div>
        {% endblock %}

        <div class="absolute right-0 top-0 m-4 flex flex-col justify-top-right items-end gap-4">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    {% include "components/toast.html.twig" with {type: type, message: message} %}
                {% endfor %}
            {% endfor %}
        </div>
    </body>
</html>
